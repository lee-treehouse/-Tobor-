{
  "name": "jest-typescript-starter",
  "version": "1.0.0",
  "description": "A starter for a node app with Jest, Typescript, and some other basic configurations",
  "main": "index.ts",
  "repository": "https://github.com/charlesdobson/jest-typescript-starter.git",
  "author": "charlesdobson <charlesdobson92@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "serve": "NODE_ENV=development nodemon --exec 'ts-node' src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest --watchAll",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src --ext .ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^2.5.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"

  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./*.{js,ts}": [
      "npx prettier --write",
      "yarn run lint"
    ]
  },
  }
}
